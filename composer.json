{
    "name": "kodeas/publicise",
    "description": "This is my package Publicise",
    "keywords": [
        "Kodeas",
        "publicise"
    ],
    "homepage": "https://github.com/kodeas/publicise",
    "license": "MIT",
    "authors": [
        {
            "name": "kodeas",
            "email": "bertugkorucu@hotmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Kodeas\\Publicise\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kodeas\\Publicise\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
